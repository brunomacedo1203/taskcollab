# API Gateway
NODE_ENV=development
PORT=3001

# Downstream services
AUTH_SERVICE_URL=http://auth-service:3002
TASKS_SERVICE_URL=http://tasks-service:3003
NOTIFICATIONS_SERVICE_URL=http://notifications-service:3004
HTTP_TIMEOUT_MS=5000

# CORS
# Comma-separated origins or '*' (no quotes). Example:
# CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000
# For wildcard, credentials must be false.
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Rate limiting
THROTTLE_TTL=1
THROTTLE_LIMIT=10

# Auth secrets (replace in real .env)
JWT_ACCESS_SECRET=change-me-access
JWT_REFRESH_SECRET=change-me-refresh
