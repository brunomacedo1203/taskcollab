# Notifications Service
NODE_ENV=development
PORT=3004

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672
TASKS_EVENTS_EXCHANGE=tasks.events
NOTIFICATIONS_QUEUE=notifications.q
TASKS_EVENTS_ROUTING=task.#
# Opcional: DLX para mensagens rejeitadas
NOTIFICATIONS_DLX=

# WebSocket
WS_PATH=/ws
# Prefer same secret as API Gateway access token
JWT_ACCESS_SECRET=change-me-access
# (Optional fallback for legacy setups)
JWT_SECRET=change-me-access

# CORS (HTTP API used by web app)
# Example for local usage: http://localhost:3000
# Use comma-separated list for multiple origins or '*' (with credentials=false)
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Database
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=challenge_db

# Optional retry/backoff for RabbitMQ connections (ms)
# RABBITMQ_RETRY_BASE_MS=500
# RABBITMQ_RETRY_MAX_MS=10000

# DB Migrations
# Quando true, o servi√ßo aplica migrations automaticamente no startup
MIGRATIONS_RUN=true
