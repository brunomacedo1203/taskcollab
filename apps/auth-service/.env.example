# Auth Service
NODE_ENV=development
PORT=3002

# Database (override in local .env)
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=challenge_db

# JWT secrets
JWT_ACCESS_SECRET=change-me-access
JWT_REFRESH_SECRET=change-me-refresh
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Security
BCRYPT_SALT_ROUNDS=10

# DB Migrations
# Quando true, o servi√ßo aplica migrations automaticamente no startup
MIGRATIONS_RUN=true
